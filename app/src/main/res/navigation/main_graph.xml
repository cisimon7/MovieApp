<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment"/>

    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"/>

    <action
        android:id="@+id/action_global_movieListFragment"
        app:destination="@id/movieListFragment"/>

    <action
        android:id="@+id/action_global_reminderFragment"
        app:destination="@id/reminderFragment"/>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.movieapp.ui.homeFragment.HomeFragment"
        android:label="fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailedCardFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">
            <argument
                android:name="movieId"
                app:argType="integer" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailedCardFragment"
        android:name="com.example.movieapp.ui.detailedCardFragment.DetailedCardFragment"
        android:label="fragment_details">
        <action
            android:id="@+id/action_detailedCardFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"/>
        <argument
            android:name="movieId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.movieapp.ProfileFragment"
        android:label="ProfileFragment" />

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.movieapp.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_detailedCardFragment"
            app:destination="@id/detailedCardFragment" />
    </fragment>

    <fragment
        android:id="@+id/reminderFragment"
        android:name="com.example.movieapp.ReminderFragment"
        android:label="fragment_reminder"
        tools:layout="@layout/fragment_reminder" />
</navigation>